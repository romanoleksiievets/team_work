<h1>Listing Pages</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.body %></td>
        <td><%= page.description %></td>
        <td><%= link_to 'Show' , admin_page_path(page)%></td>
        <td><%= link_to 'Edit' , edit_admin_page_path(page)%></td>
        <td><%= link_to 'Destroy', admin_page_path(page) ,method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page' , new_admin_page_path %><br>
<%= link_to 'Back' , admin_path %>
